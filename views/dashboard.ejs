<%- include('./partials/header') %>

<div class="container" style="margin-top:2%;">

  <div class="row content">

    <!-- sidebar -->
    <div class="col-sm-3 hidden-xs">
    <%# <div class="col-sm-2 offset-md-6 hidden-xs">%>
      <div class="profile">
        <div class="card">
          <img style="width:100%" class="card-img-top img-fluid" src="/images/awesome_tweets_3.jpeg" alt="Card image cap">
          <div class="card-block"> <h2>Terry Banana</h2> </div>
          <div class="card-block"> @terry_banana </div>
          <div class="card">
            <h3 class="card-header">Trending on Tweeting</h3>
            <div class="card-block" style="border-color= #333;">
              <p class="card-text">#GoCodeCore</p>
              <p class="card-text">#CodingIsAwesome</p>
              <p class="card-text">#Let'sCode</p>
              <p class="card-text">#WhopWhop</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <br>

    <!-- main area -->
    <div class="col-sm-8"  >
        <form action="/dashboard" method="post">
              <p>
                <input type="text" id="username" name="username"
              placeholder="Username"  />
              </p>

            <p >
              <textarea style="width:100%" id="message" name="message"
              placeholder="Your message..."
              rows="5" cols="80" ></textarea>
            </p>

            <p>
              <input type="submit" name="Submit">
            </p>
        </form>

        <%#Everything before the "by" is gonna be ORDER BY ASC %>
          <% for (let tweet of tweets) { %>
            <div class="row" style="border: 1px solid black; margin-top:15px"
            >
            <img src="/images/awesome_tweets_3.jpeg" style="width:8% " class="img-fluid" alt="Responsive image" >

            <%= tweet.message %> by <%= tweet.username %>

            </div>
            <% } %>
          </div>
        </div>
      </div>


<%- include('./partials/footer') %>
